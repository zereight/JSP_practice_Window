
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<%@ page import="user.UserDTO" %> <!-- 라이브러리호출 방식 -->
<%@ page import="user.UserDAO" %>
<%@ page import="java.io.PrintWriter" %> <!-- js 입출력시 사용 -->

<% 
	request.setCharacterEncoding("UTF-8");

	String userID = "defualt";
	String userPassword = "default";
	
	if(request.getParameter("userID") != "defualt" ){
		userID = (String) request.getParameter("userID");
	}
	if(request.getParameter("userPassword") != "defualt" ){
		userID = (String) request.getParameter("userPassword");
	}
	if( userID =="defualt" || userPassword =="defualt" ){
		PrintWriter script = response.getWriter();
		
		script.println("<script>");
		script.println("alert('입력이 안된 사항이 있습니다.');");
		script.println("history.back();");
		script.println("</script>");
		script.close();
	} 
		UserDAO userDAO = new UserDAO();
		int result = userDAO.join( userID, userPassword );
		
		if(result == 1){
			PrintWriter script = response.getWriter();
			script.println("<script>");
			script.println("alert('회원가입에 성공했습니다.');");
			script.println("location.href = 'index.jsp';");
			script.println("</script>");
			script.close();

		}

	return;
%>